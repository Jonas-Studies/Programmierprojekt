extends layout

block includes
    include searchresult

block links
    link(rel="stylesheet" href="css/searchresults_page.css")

block title
    title= "Drug-Search-Engine results"

block content
    body(class="align-vertically gap-2")
        header
            + navbar()
        section 
            + searchbar()
        section(class="align-vertically gap-1")
            if substances != undefined && substances.length != undefined && substances.length > 0
                each substance in substances
                    section(class="align-horizontally align-centered")
                        + searchresult( substance )
            else
                p= "Could not find any substances"